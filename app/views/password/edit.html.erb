<div class="member-system">
  
  <div class="container">
    <div class="member-card">
      <h1 class="title">更改密碼</h1>
      <%= form_with model: Current.user, url: edit_password_path do |form| %>
        <div class="user-form-error">
          <% if form.object.errors.any? %>
            <% form.object.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          <% end %>  
        </div>
      
        <div class="user-password">
          <%= form.label :password, '密碼' %>
          <%= form.password_field :password %>
        </div>
  
        <div class="user-password-confirmation">
          <%= form.label :password_confirmation, '確認密碼' %>
          <%= form.password_field :password_confirmation %>
        </div>
    
    
        <%= form.submit '更改密碼' %>
      <% end %>
    </div>
  </div>
</div>