<%= form_with model: user, url: admin_user_path do |form| %>
<div class="user-form-error">
  <% if form.object.errors.any? %>
    <% form.object.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>  
</div>

  <div class="user-email">
    <%= form.label :email, '信箱' %>
    <%= form.text_field :email, placeholder: 'user@gmail.com' %>
  </div>
  
  <div class="user-password">
    <%= form.label :password, '密碼' %>
    <%= form.password_field :password %>
  </div>

  <div class="user-password-confirmation">
    <%= form.label :password_confirmation, '確認密碼' %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="user-role">
    <%= form.label :role, '角色' %>

    <div class="normal">
      <%= form.label :role_0, "使用者" %>
      <%= form.radio_button :role, "user", checked: true %>
    </div>
    
    <div class="admin">
      <%= form.label :role_1, "管理員" %>
      <%= form.radio_button :role, "admin" %>
    </div>
  
  </div>

  <%= form.submit %>
<% end %>