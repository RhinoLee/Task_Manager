<h1>新增列表</h1>

<% if @task.errors.any? %>
  <ul>
    <% @task.errors.each do |error| %>
      <li><%= error.message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @task do |form| %>
  <%= form.label :title, '任務標題' %><br>
  <%= form.text_field :title %>
  <br>
  <br>
  <%= form.label :content, '任務內容' %><br>
  <%= form.text_area :content, size: "30x10" %>
  <br>
  <%= form.submit '新增任務' %>
<% end %>
